    android:layout_height="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <CheckBox
            android:id="@+id/cbShoppingListItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
